	fbuf.tmp = 0
next

for chnum,0,chmax
	x1 = (chnum \ cellcnt)*8
	y1 = int(chnum / cellcnt)*8
	for y,0,8
		ptr = (16*chnum)+y
		for x,0,8
			pget x+x1,y+y1
			c = (ginfo(16)+ginfo(17)+ginfo(18))/3 	// gray scale 256諧調
			if (c < 96):c=0
			if (c >= 96)and(c <= 128):c=1
			if (c > 128)and(c <= 192):c=2
			if (c > 192):c=3
			if(c and 1){
				tmp = peek(fbuf,ptr)
				tmp += (0x80 >> x)
				poke fbuf,ptr,tmp
			}
			if(c and 2){
				tmp = peek(fbuf,ptr+8)
				tmp += (0x80 >> x)
				poke fbuf,ptr+8,tmp
			}
		next
	next
next

