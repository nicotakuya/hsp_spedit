	for x,0,bmpw,8
		for i,0,8
			pget bmpx+x+i,bmpy+y			
			a = a<<4
			r = ginfo(16)
			g = ginfo(17)
			b = ginfo(18)
			if(r){	a=a | 1 }
			if(g){	a=a | 2 }
			if(b){	a=a | 4 }
			if (r>128) or (g>128) or (b>128){
